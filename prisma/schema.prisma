generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model Pincode {
  id           Int      @id @default(autoincrement())
  pincode      String   @unique @db.VarChar(10)
  localityName String   @map("locality_name") @db.VarChar(255)
  district     String   @db.VarChar(100)
  state        String   @db.VarChar(100)
  latitude     Float?
  longitude    Float?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@index([state])
  @@index([district])
  @@map("pincodes")
}

model JobTitle {
  id        Int      @id @default(autoincrement())
  title     String   @unique @db.VarChar(100)
  category  String   @db.VarChar(50)
  createdAt DateTime @default(now()) @map("created_at")

  @@index([category])
  @@map("job_titles")
}

model College {
  id        Int      @id @default(autoincrement())
  name      String   @unique @db.VarChar(255)
  category  String   @db.VarChar(50)
  pincode   String   @db.VarChar(10)
  locality  String?  @db.VarChar(255)
  district  String?  @db.VarChar(100)
  latitude  Float?
  longitude Float?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([name])
  @@index([pincode])
  @@index([locality])
  @@index([district])
  @@map("colleges")
}

enum FundingSeries {
  Seed
  SeriesA
  SeriesB
  SeriesC
  SeriesD
  SeriesE
  IPO
  Bootstrapped
}

enum AccountType {
  Company
  Individual
}

enum JobCategory {
  EngineeringSoftwareQA
  DataScienceAnalytics
  UXDesignArchitecture
  HumanResources
  ProjectProgramManagement
  ProductManagement
  EngineeringHardwareNetworks
  QualityAssurance
  FinanceAccounting
  ITInformationSecurity
  MarketingCommunication
  SalesBusinessDevelopment
  AdministrationFacilities
  CustomerSuccessServiceOperations
  Consulting
  ContentEditorialJournalism
  LegalRegulatory
  ResearchDevelopment
  StrategicTopManagement
}

model User {
  id                  Int                   @id @default(autoincrement())
  email               String                @unique @db.VarChar(255)
  name                String                @db.VarChar(255)
  phone               String?               @db.VarChar(20)
  phoneVisibleToRecruiters Boolean?          @default(false) @map("phone_visible_to_recruiters")
  passwordHash        String?               @map("password_hash") @db.VarChar(255)
  clerkId             String?               @unique @map("clerk_id") @db.VarChar(255)
  avatarUrl           String?               @map("avatar_url") @db.VarChar(500)
  avatarId            String?               @map("avatar_id") @db.VarChar(50)
  accountType         AccountType?         @map("account_type")
  homeLatitude        Float?                @map("home_latitude")
  homeLongitude       Float?                @map("home_longitude")
  homeLocality        String?               @map("home_locality")   @db.VarChar(255)
  homeDistrict        String?               @map("home_district")   @db.VarChar(100)
  homeState           String?               @map("home_state")      @db.VarChar(100)
  isJobSeeker         Boolean?              @default(false) @map("is_job_seeker")
  jobSeekerSkills     String[]              @default([]) @map("job_seeker_skills")
  jobSeekerExperience Float?                @map("job_seeker_experience")
  createdAt           DateTime              @default(now()) @map("created_at")
  updatedAt           DateTime              @updatedAt @map("updated_at")
  companies           Company[]
  onboardingSessions  OnboardingSession[]
  gigs                Gig[]
  resume              Resume?
  conversationsAsRecruiter Conversation[] @relation("RecruiterConversations")
  conversationsAsCandidate  Conversation[] @relation("CandidateConversations")
  chatMessagesSent    ChatMessage[]

  @@index([email])
  @@index([clerkId])
  @@index([accountType])
  @@index([isJobSeeker])
  @@map("users")
}

model Company {
  id                  Int                  @id @default(autoincrement())
  name                String               @db.VarChar(255)
  logoPath            String?              @db.VarChar(500)
  websiteUrl          String?              @map("website_url") @db.VarChar(500)
  fundingSeries       FundingSeries?
  latitude            Float?
  longitude           Float?
  state               String               @db.VarChar(100)
  district            String               @db.VarChar(100)
  pincode             String?              @db.VarChar(10)
  userId              Int
  createdAt           DateTime             @default(now()) @map("created_at")
  updatedAt           DateTime             @updatedAt @map("updated_at")
  user                User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  jobPositions        JobPosition[]
  onboardingSessions  OnboardingSession[]

  @@index([name])
  @@index([state])
  @@index([district])
  @@index([userId])
  @@map("companies")
}

model JobPosition {
  id                  Int                  @id @default(autoincrement())
  title               String               @db.VarChar(255)
  category            JobCategory
  yearsRequired       Float                @default(0)
  salaryMin           Int?                 @map("salary_min")
  salaryMax           Int?                 @map("salary_max")
  jobDescription      String               @db.Text
  remoteType          String?              @map("remote_type") @db.VarChar(50)
  assistRelocation    Boolean?             @default(false) @map("assist_relocation")
  seniorityLevel      String?              @map("seniority_level") @db.VarChar(50)
  teamSize            String?              @map("team_size") @db.VarChar(50)
  perks               String[]             @default([])
  holidays            String?              @db.Text
  companyId           Int
  isActive            Boolean              @default(true) @map("is_active")
  extensionCount      Int                  @default(0) @map("extension_count")
  expiresAt           DateTime?            @map("expires_at")
  autoDeletedAt       DateTime?            @map("auto_deleted_at")
  createdAt           DateTime             @default(now()) @map("created_at")
  updatedAt          DateTime             @updatedAt @map("updated_at")
  company             Company              @relation(fields: [companyId], references: [id], onDelete: Cascade)
  onboardingSessions  OnboardingSession[]

  @@index([category])
  @@index([companyId])
  @@index([isActive])
  @@map("job_positions")
}

model OnboardingSession {
  id             Int          @id @default(autoincrement())
  userId         Int
  createdAt      DateTime     @default(now()) @map("created_at")
  completedAt    DateTime?    @map("completed_at")
  companyId     Int?         @map("company_id")
  jobPositionId  Int?         @map("job_position_id")
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  company        Company?     @relation(fields: [companyId], references: [id], onDelete: SetNull)
  jobPosition    JobPosition? @relation(fields: [jobPositionId], references: [id], onDelete: SetNull)
  conversations  OnboardingConversation[]

  @@index([userId])
  @@index([createdAt])
  @@map("onboarding_sessions")
}

model OnboardingConversation {
  id                    Int                @id @default(autoincrement())
  onboardingSessionId    Int                @map("onboarding_session_id")
  stepKey               String             @map("step_key") @db.VarChar(100)
  questionText          String             @map("question_text") @db.Text
  answerText            String             @map("answer_text") @db.Text
  orderIndex            Int                @map("order_index")
  createdAt             DateTime           @default(now()) @map("created_at")
  session               OnboardingSession   @relation(fields: [onboardingSessionId], references: [id], onDelete: Cascade)

  @@index([onboardingSessionId])
  @@index([onboardingSessionId, orderIndex])
  @@map("onboarding_conversations")
}

model Gig {
  id          Int      @id @default(autoincrement())
  userId      Int      @map("user_id")
  title       String   @db.VarChar(255)
  description String?  @db.Text
  serviceType        String   @map("service_type") @db.VarChar(100)
  expectedSalary     String?  @map("expected_salary") @db.VarChar(100)
  experienceWithGig  String?  @map("experience_with_gig") @db.VarChar(255)
  customersTillDate  Int?     @map("customers_till_date")
  state              String   @db.VarChar(100)
  district           String   @db.VarChar(100)
  pincode            String?  @db.VarChar(10)
  locality           String?  @db.VarChar(255)
  latitude           Float?
  longitude          Float?
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([state])
  @@index([district])
  @@index([pincode])
  @@map("gigs")
}

model Resume {
  id                              Int                    @id @default(autoincrement())
  userId                          Int                    @unique @map("user_id")
  resumeFilePath                  String?                @map("resume_file_path") @db.VarChar(500)
  firstName                       String?                @map("first_name") @db.VarChar(255)
  lastName                        String?                @map("last_name") @db.VarChar(255)
  emailOverride                   String?                @map("email_override") @db.VarChar(255)
  currentPosition                 String?                @map("current_position") @db.VarChar(255)
  yearsExperience                 String?                @map("years_experience") @db.VarChar(50)
  expectedSalaryPackage           String?                @map("expected_salary_package") @db.VarChar(100)
  currentSalaryPackage            String?                @map("current_salary_package") @db.VarChar(100)
  currentSalaryVisibleToRecruiter Boolean?               @default(false) @map("current_salary_visible_to_recruiter")
  createdAt                       DateTime               @default(now()) @map("created_at")
  updatedAt                       DateTime               @updatedAt @map("updated_at")
  user                            User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  workExperiences                 ResumeWorkExperience[]
  educations                      ResumeEducation[]

  @@map("resumes")
}

model ResumeWorkExperience {
  id          Int     @id @default(autoincrement())
  resumeId    Int     @map("resume_id")
  companyName String? @map("company_name") @db.VarChar(255)
  companyUrl  String? @map("company_url") @db.VarChar(500)
  position    String? @db.VarChar(255)
  duties      String? @db.Text
  year        String? @db.VarChar(20)
  orderIndex  Int     @default(0) @map("order_index")
  resume      Resume  @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  @@index([resumeId])
  @@map("resume_work_experiences")
}

model ResumeEducation {
  id            Int     @id @default(autoincrement())
  resumeId      Int     @map("resume_id")
  universityName String? @map("university_name") @db.VarChar(255)
  streamName    String? @map("stream_name") @db.VarChar(255)
  marksOrScore  String? @map("marks_or_score") @db.VarChar(100)
  yearOfPassing String? @map("year_of_passing") @db.VarChar(20)
  orderIndex    Int     @default(0) @map("order_index")
  resume        Resume  @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  @@index([resumeId])
  @@map("resume_educations")
}

model Conversation {
  id          Int          @id @default(autoincrement())
  recruiterId Int          @map("recruiter_id")
  candidateId Int          @map("candidate_id")
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")
  recruiter   User         @relation("RecruiterConversations", fields: [recruiterId], references: [id], onDelete: Cascade)
  candidate   User         @relation("CandidateConversations", fields: [candidateId], references: [id], onDelete: Cascade)
  messages    ChatMessage[]

  @@unique([recruiterId, candidateId])
  @@index([recruiterId])
  @@index([candidateId])
  @@map("conversations")
}

model ChatMessage {
  id             Int          @id @default(autoincrement())
  conversationId Int          @map("conversation_id")
  senderId       Int          @map("sender_id")
  bodyEncrypted  String       @map("body_encrypted") @db.Text
  createdAt      DateTime    @default(now()) @map("created_at")
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User         @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([senderId])
  @@map("chat_messages")
}
